# AI Swarm v2 - Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# REQUIRED: GitHub Configuration
# =============================================================================

# GitHub Personal Access Token (for PR creation)
# Create at: https://github.com/settings/tokens
# Required scopes: repo, workflow
GITHUB_TOKEN=ghp_your_token_here

# GitHub repository to work on (format: owner/repo)
GITHUB_REPO=your-username/your-project

# =============================================================================
# REQUIRED: Project Configuration
# =============================================================================

# Absolute path to the project directory
PROJECT_DIR=/path/to/your/project

# Context folder relative to PROJECT_DIR (for reduced token usage)
# This folder should contain key documentation for the agents
CONTEXT_FOLDER=docs/context

# =============================================================================
# REQUIRED: Authentication (Google OAuth)
# =============================================================================

# Create OAuth credentials at: https://console.cloud.google.com/apis/credentials
# Add authorized redirect URI: http://localhost:3000/api/auth/callback/google

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=  # Generated automatically by deploy.sh
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Comma-separated list of allowed emails (leave empty to allow all)
ALLOWED_EMAILS=your@email.com

# =============================================================================
# REQUIRED: Temporal Configuration
# =============================================================================

# Temporal server address
TEMPORAL_ADDRESS=temporal:7233

# Temporal namespace
TEMPORAL_NAMESPACE=ai-swarm

# =============================================================================
# OPTIONAL: Email Notifications
# =============================================================================

# Email provider (resend, sendgrid, mailgun)
EMAIL_PROVIDER=resend
EMAIL_API_KEY=
EMAIL_FROM=ai-swarm@example.com
EMAIL_TO=you@example.com



# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# Portal Configuration
# =============================================================================

# Portal port
PORTAL_PORT=3000

# Temporal UI port
TEMPORAL_UI_PORT=8233



# =============================================================================
# Redis Configuration
# =============================================================================

REDIS_URL=redis://redis:6379

# =============================================================================
# Maintenance Configuration
# =============================================================================

# Chat and task file retention in days
CHAT_MAX_AGE_DAYS=90

# Task directory for Gemini CLI async pattern
GEMINI_TASK_DIR=/tmp/ai-swarm

# Set to 'false' to keep task directories for debugging
GEMINI_CLEANUP_TASKS=true
